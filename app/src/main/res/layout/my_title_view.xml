<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/top_title"
        android:layout_width="fill_parent"
        android:layout_height="50dip" >

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" >

            <TextView
                android:id="@+id/iv_left"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:scaleType="fitCenter"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_24" />

            <TextView
                android:id="@+id/count_tv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dip"
            android:layout_marginRight="100dip"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#666666"
            android:textSize="@dimen/text_size_22" />

        <TextView
            android:id="@+id/iv_right"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:scaleType="fitXY"
            android:singleLine="true"
            android:text=""
            android:textSize="@dimen/text_size_22" />

        <ImageView
            android:id="@+id/img_sanjiao"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_title"
            android:visibility="gone" />

        <TextView
            android:id="@+id/iv_right2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/iv_right"
            android:gravity="center_vertical"
            android:scaleType="fitXY"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_24"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_right_jiaobiao"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignRight="@+id/iv_right"
            android:layout_alignTop="@+id/iv_right"
            android:layout_marginRight="-7dp"
            android:layout_marginTop="-7dp"
            android:background="@drawable/jiaobiao_dxml_red_circle"
            android:gravity="center"
            android:text="15"
            android:textColor="@color/white"
            android:textSize="6sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_right2_jiaobiao"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignRight="@+id/iv_right2"
            android:layout_alignTop="@+id/iv_right2"
            android:layout_marginRight="-6dp"
            android:layout_marginTop="-6dp"
            android:background="@drawable/jiaobiao_dxml_red_circle"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="6sp"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:id="@+id/lines"
        android:layout_width="fill_parent"
        android:layout_height="0.5px"
        android:background="@color/line" />

</LinearLayout>